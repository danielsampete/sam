<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div> 
<% else %>
  <div class="center hero-unit1">
    <h1>Welcome to Konnect!</h1>

    <h1>
      The Place where all your links meet to
      <a href="#">Konnect</a>
      
    </h1>
    Sign Up to start using the network of networks
    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-warning" %>
  </div>

  
<% end %> 